{{!-- We dont actually use post.whatever, we are passing in actual properties here --}}
<article class="post">
    <div class="title">
        <a href="{{post_url}}" target="_blank">{{title}}</a>
        <span>({{format_url post_url}})</span>
    </div>
    <div class="meta">
        {{vote_count}} {{format_plural "point" vote_count}} {{user.username}} on {{created_at}}
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</article>